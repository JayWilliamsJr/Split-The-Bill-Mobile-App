<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.androidbootcamp.splitthebill.SplitCalculator">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TxtTitle2"
        android:id="@+id/txtTitle2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#0cb9cc"
        android:textSize="45sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:layout_marginBottom="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtParty"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:hint="Enter Party Size"
        android:textSize="25sp"
        android:textColorHint="#0cb9cc"
        android:textColor="#0cb9cc"
        android:typeface="serif"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtBill"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:hint="Enter Bill Amount"
        android:textAlignment="center"
        android:textColor="#0cb9cc"
        android:textColorHint="#0cb9cc"
        android:textSize="25sp"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TxtSubtext"
        android:id="@+id/txtSub"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:typeface="serif"
        android:textSize="20sp"
        android:textColor="#0cb9cc" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtService"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dialog"
        android:prompt="@string/Prompt"
        android:entries="@array/txtService"
        android:dropDownSelector="@string/Prompt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtResult"
        android:layout_below="@+id/txtService"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:textSize="15sp"
        android:textColor="#0cb9cc" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BtnSplit"
        android:id="@+id/btnSplit"
        android:layout_below="@+id/txtResult"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:textColor="#0cb9cc"
        android:typeface="serif"
        android:textSize="25sp"
        android:onClick="onClickSplitButton" />

</RelativeLayout>
